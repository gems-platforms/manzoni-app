{
  "name": "manzoni-app",
  "productName": "Manzoni",
  "version": "0.0.1",
  "description": "LLM-powered word processor",
  "main": "./dist-electron/index.js",
  "type": "module",
  "homepage": "https://manzoni.app",
  "author": {
    "name": "Lorenzo Bernaschina"
